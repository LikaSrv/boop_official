<div class="banner-container">
    <%= render 'shared/navbar' %>
  <div class="banner-content">
    <div class="hero-section">
      <div class="hero-content">
        <h1 class="hero-title">
          <span class="orange">ACCOMPAGNER</span> AVEC SOIN<br>
           <span class="orange">ADOPTER</span> AVEC AMOUR
        </h1>

        <p class="hero-subtitle">
          Trouvez les meilleurs professionnels du bien-être animal en un seul endroit. Boop vous connecte aux experts et vous aide aussi à adopter votre futur compagnon.
        </p>

        <div class="cta-buttons">
          <a href="<%=professionals_path%>" class="btn btn-primary">Prendre un rendez-vous</a>
          <a href="<%=pricings_path%>" class="btn btn-outline-primary text-black">Proposer un service</a>
        </div>
      </div>

      <div class="hero-image">
        <%= image_tag "https://hgzbeyxwlmegxvrhxpws.supabase.co/storage/v1/object/public/general_images//png-transparent-havanese-dog-pet-sitting-labrador-retriever-puppy-cat-pet-dog-animals-carnivoran-pet-thumbnail-removebg-preview.png"%>
      </div>
    </div>
  </div>
  <%# search zone %>
  <%= simple_form_for :search, url: professionals_path, method: :get do |f| %>
    <div class="d-flex justify-content-center search-form-control form-group mb-3" style="width: 100%; margin-top: 2rem;" >
      <div class="d-flex align-items-center search-form-control form-group w-form">
        <%= text_field_tag :query,
              params[:query],
              class: "form-control search-bar bg-white ps-5 w-75",
              placeholder: "Rechercher un service..."
          %>
        <%= text_field_tag :query_address,
              params[:query_address],
              class: "form-control search-bar bg-white ps-5 w-25",
              placeholder: "Ville..."
          %>
        <div>
          <%= submit_tag "Rechercher", class: "btn_custom search-bar mx-5" %>
        </div>
      </div>
    </div>
  <% end %>

  <%= render "service_categories" %>
</div>
