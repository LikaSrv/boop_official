<section id="pricings" class="pricing-content section-padding">
  <div class="container">
    <div class="section-title text-center mb-3 mt-3">
      <h2>Souscription</h2>
      <p class="m-3">
        Trouvez le programme idÃ©al et bÃ©nÃ©ficiez de
        <span class="text-primary" style="font-weight:bold; font-size:x-large">
          30 jours d'essai gratuit
        </span>
        pour en profiter pleinement ! ðŸš€
      </p>
    </div>

    <!-- Toggle Mensuel / Annuel -->
    <div class="d-flex justify-content-center my-4">
      <div class="billing-toggle">
        <input type="checkbox" id="billingSwitch">
        <label for="billingSwitch" class="d-flex position-relative">
          <div class="label monthly">Mensuel</div>
          <div class="label yearly">Annuel</div>
          <div class="slider"></div>
        </label>
      </div>
    </div>

    <!-- Container pour les cartes Mensuel (0..2) -->
    <div class="row flex-nowrap overflow-auto text-center custom-scroll mt-5" id="mensuel-cards">
      <% [0,1,2].each do |i| %>
        <div class="wow fadeInUp pricing_content"
             data-wow-duration="1s" data-wow-delay="0.1s" data-wow-offset="0"
             style="visibility: visible; animation-duration:1s; animation-delay:0.1s; animation-name:fadeInUp;">
          <%= render "pricing_card", pricings: @pricings, index: i %>
        </div>
      <% end %>
    </div>

    <!-- Container pour les cartes Annuel (3..5), cachÃ© par dÃ©faut -->
    <div class="row flex-nowrap overflow-auto text-center custom-scroll mt-5 d-none" id="annuel-cards">
      <% [3,4,5].each do |i| %>
        <div class="wow fadeInUp pricing_content"
             data-wow-duration="1s" data-wow-delay="0.1s" data-wow-offset="0"
             style="visibility: visible; animation-duration:1s; animation-delay:0.1s; animation-name:fadeInUp;">
          <%= render "pricing_card", pricings: @pricings, index: i %>
        </div>
      <% end %>
    </div>
  </div>
</section>
<script>
  document.addEventListener("DOMContentLoaded", function() {
    const billingSwitch = document.getElementById("billingSwitch");
    const mensuelCards = document.getElementById("mensuel-cards");
    const annuelCards = document.getElementById("annuel-cards");

    billingSwitch.addEventListener("change", function() {
      if (this.checked) {
        mensuelCards.classList.add("d-none");
        annuelCards.classList.remove("d-none");
      } else {
        mensuelCards.classList.remove("d-none");
        annuelCards.classList.add("d-none");
      }
    });
  });
</script>
