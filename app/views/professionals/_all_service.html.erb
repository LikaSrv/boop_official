<div class="d-flex flex-column shadow position-relative"  style="width: 300px; height: 85vh; background-color:rgba(236, 230, 230, 0.31); padding: 20px">
  <div class="text-center m-4">
    <a href="<%=pro_index_user_path(current_user)%>"><h3 class="text-dark"> Mes Services </h3></a>
  </div>
  <div class="overflow-auto custom-scroll d-flex flex-column justify-content-center" style="white-space: nowrap; max-height: 100%;">
    <% @professionals.each do |professional| %>
      <a href="<%= pro_show_user_path(current_user, professional) %>"
          class="btn btn-outline-info m-1 text-black rounded rounded-4 <%= 'btn-primary' if professional == selected_professional %>"
          style="display: inline-block; width: 90%;">
        <%= professional.name %>
      </a>
    <% end %>
  </div>
  <a href="<%=new_professional_path%>" class="btn btn-primary rounded-circle shadow object-fit-cover d-flex justify-content-center align-items-center position-absolute bottom-0 end-0 m-4"
              style="aspect-ratio: 1; width: 50px;" >
              <i class="fa-solid fa-plus"></i>
            </a>
</div>
