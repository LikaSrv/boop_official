<%# back btn %>
<div>
  <%= link_to pro_show_user_path(current_user, @professional), class:"text-decoration-none text-primary", style:"font-size: 16px" do%>
    <i class="fa-solid fa-chevron-left text-primary ms-4 me-3 mt-3"></i>Retour
  <% end %>
</div>
<%# title %>
<div class=" text-center mb-4 d-flex flex-row justify-content-center position-relative">
  <h1>Modifier mes créneaux de disponibilités</h1>
  <i class="fa-solid fa-paw float-end text-primary"></i>
</div>
<%# body %>
<div class="row d-flex flex-wrap justify-content-center">
  <% @available_months.each do |month| %>
    <div class="col-lg-5 col-md-12 col-sm-12 mx-4 card_pro p-4" data-controller="edit-availabilities" data-edit-availabilities-api-key-value="<%= @professional.id %>">
      <div class="w-100 text-center p-2">
        <h5><strong><%= I18n.t('date.month_names', locale: :fr)[month] %></strong></h5>
      </div>
      <% available_days_of_month = @futur_availibilities.select { |a| a.start_time.month == month }.map { |a| a.start_time.to_date }.uniq %>
      <div class="d-flex flex-column mx-3 all-dates" data-edit-availabilities-target="monthDates">
        <% available_days_of_month.each do |day| %>
          <div class="nav-item dropdown">
            <a href="#" class="btn btn-outline-primary w-100 m-1" data-action="click->edit-availabilities#toggleDay" data-edit-availabilities-target="day">
              <%= day.strftime('%d-%m-%Y') %>
            </a>
            <% availabilities = @futur_availibilities.select { |a| a.start_time.to_date == day } %>
            <div class="d-none d-flex flex-wrap justify-content-center mx-2 times"
                  data-edit-availabilities-target="time">
              <% availabilities.each do |availability| %>
                <% if availability.status == false %>
                  <% if availability.appointments.empty? %>
                    <a href="#"
                      class="btn btn-outline-primary m-1"
                      style="width: 22%;"
                      data-controller="edit-availabilities"
                      data-availability-id="<%= availability.id %>"
                      data-professional-id="<%= @professional.id %>"
                      data-status="<%=availability.status%>"
                      data-action="click->edit-availabilities#toggleTime">
                      <%= availability.start_time.strftime("%H:%M") %>
                    </a>
                  <% else %>
                    <a href="#"
                      class="btn btn-secondary m-1 disabled"
                      style="width: 22%;">
                      <%= availability.start_time.strftime("%H:%M") %>
                    </a>
                  <% end %>
                <% else %>
                <a href="#"
                      class="btn btn-outline-primary m-1"
                      style="width: 22%;"
                      data-controller="edit-availabilities"
                      data-availability-id="<%= availability.id %>"
                      data-professional-id="<%= @professional.id %>"
                      data-status="<%=availability.status%>"
                      data-action="click->edit-availabilities#toggleTime">
                      <%= availability.start_time.strftime("%H:%M") %>
                    </a>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
