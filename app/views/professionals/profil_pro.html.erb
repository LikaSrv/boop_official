<div>
  <%= render "shared/back"%>
</div>
<%# title %>
<div class=" text-center mb-4 d-flex flex-row justify-content-center">
  <h1>Mon profil pro</h1>
  <i class="fa-solid fa-paw float-end text-primary"></i>
</div>
<%= simple_form_for @professional do |p|%>
  <div class="row justify-content-center">
    <div class="card_pro col-lg-5 col-md-5 col-sm-10">
      <%= image_tag @professional.photo, class: "card-img-top object-fit-cover"%>
      <div class="text-center" style="margin-top: 50px;">
        <h5>Profession : <strong><%=@professional.specialty%></strong></h5>
      </div>
    </div>
    <div class="card_pro col-lg-5 col-md-5 col-sm-10 p-4">
      <div class="d-flex align-items-center justify-content-between" style="width: 100%;">
        <%= p.label :email, "Nom du professionnel :", class: "me-2 mb-0" %>
        <div style="width: 70%;">
        <%= p.input :name, label: false%>
        </div>
      </div>
      <div class="d-flex align-items-center justify-content-between">
        <%= p.label :phone, "Numéro de téléphone", class: "me-2 mb-0" %>
        <div style="width: 70%;">
        <%= p.input :phone, label: false, class: "form-control" %>
      </div>
      </div>
      <div class="d-flex align-items-center justify-content-between">
        <%= p.label :email, "Adresse email :", class: "me-2 mb-0" %>
        <div style="width: 70%;">
        <%= p.input :email, label: false, class: "form-control" %>
      </div>
      </div>
      <div class="d-flex align-items-center justify-content-between">
        <%= p.label :email, "Adresse :", class: "me-2 mb-0" %>
        <div style="width: 70%;">
        <%= p.input :address,
                    label: false,
                    input_html: {value: @professional.address, data: {address_autocomplete_target: "address"}, class: "form-control"},
                    wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
                  %>
      </div>
      </div>
      <div class="d-flex align-items-center justify-content-between">
        <%= p.label :email, "Description :", class: "me-2 mb-0" %>
        <div style="width: 70%;">
        <%= p.input :description, label: false, as: :text, input_html: { rows: 4 } %>
        </div>
      </div>
      <div class="d-flex align-items-center justify-content-between">
      <%= p.label :email, "Photo :", class: "me-2 mb-0" %>
      <div style="width: 70%;">
      <%= p.input :photo, label: false %>
      </div>
    </div>
    <div class="text-center my-4">

    <%= p.button :submit, "Enregistrer", class: "btn btn-primary" %>
    </div>
    <div class="text-end " style="margin-top: 50px;">

    <a href="<%=professional_path(@professional)%>" methode="DELETE" class="text-danger" >Je souhaite supprimer mon compte pro</a>
    </div>
  </div>
</div>
<% end %>
