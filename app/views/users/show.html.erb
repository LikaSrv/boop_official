<div>
  <div>
    <div class="p-4 text-center">
      <div class="row">
        <%# my profil %>
        <div class="col card_pro p-4 m-2 text-center" style="width: 47%;">
          <h2> <strong> Mon Profil </strong> </h2>
          <% if @user.photo.key?%>
            <%= image_tag "#{ENV['SUPABASE_URL']}/storage/v1/object/public/uploaded_photos/#{@user.photo.key}", width: 100, style: "border-radius: 50%; margin: 20px; aspect-ratio: 1;", class:"object-fit-cover" %>
          <% else %>
            <%= image_tag "https://hgzbeyxwlmegxvrhxpws.supabase.co/storage/v1/object/public/general_images/profil-default.jpg", alt:"photo_profil_default", width: 100, style: "border-radius: 50%; margin: 20px; aspect-ratio: 1;", class:"object-fit-cover"%>
          <% end %>
          <p>Nom : <strong> <%=@user.first_name%> </strong></p>
          <p>Pr√©nom : <strong> <%=@user.last_name%> </strong></p>
          <p>Email : <strong> <%=@user.email%> </strong></p>
          <div>
            <%= link_to "Modifier mon profil", edit_user_registration_path(current_user), class: "btn btn-primary my-4" %>
          </div>
        </div>
        <%# my pets %>
        <div class="col card_pro p-4 m-2 text-center" style="width: 47%;">
          <div class="d-flex flex-row justify-content-center">
            <h2 class="mx-3"> <strong> Mes animaux </strong> </h2>
            <a href="<%=new_user_pet_path(current_user)%>" class="btn btn-primary rounded-circle shadow object-fit-cover" >
              <i class="fa-solid fa-plus"></i>
            </a>
          </div>
          <% if @pets.empty? %>
            <p class="mt-3">Vous n'avez pas d'animaux</p>
            <img src="https://res.cloudinary.com/dsbteudoz/image/upload/v1734435780/dog-thinking-about-bone-removebg-preview_nlayll.png" alt="pas d'animaux" style="width: 200px; ">
          <% else %>
            <div class="d-flex flex-row justify-content-start align-items-center h-75 overflow-auto custom-scroll" style="white-space: nowrap; max-width: 100%;">
              <% @pets.each do |pet| %>
                <a href="<%= user_pet_path(current_user, pet) %>" class="text-decoration-none mx-2 hoveredCircleButton" style="display: inline-block;">
                  <% if pet.photo.present? %>
                    <%= image_tag pet.photo_url, width: 200, style: "border-radius: 50%; aspect-ratio: 1;", class: "shadow object-fit-cover" %>
                  <% else %>
                    <%= image_tag("#{ENV['SUPABASE_URL']}/storage/v1/object/public/general_images/Design%20sans%20titre%20(1).jpg", alt:"photo_pet_default",
                          class:"shadow object-fit-cover",
                          style:"border-radius: 50%; aspect-ratio: 1; width: 200px;")%>
                  <% end %>
                </a>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <%# my appointments %>
    <div class="row card_pro p-4 mx-3 text-center">
      <h2 class="mb-3"> <strong> Mes rendez-vous </strong> </h2>
      <% if @appointments.empty? %>
        <div class="text-center">
          <p >Vous n'avez pas de rendez-vous</p>
          <%= image_tag("#{ENV['SUPABASE_URL']}/storage/v1/object/public/general_images/owner-playing-with-pet-dog.png", alt:"pas de rdv", style:"width: 200px;")%>
        </div>
      <% else %>
        <% @appointments.each do |a| %>
          <div class="col-lg-4 col-md-12 col-12">
            <a href="<%=professional_appointment_path(a.professional, a)%>" style="text-decoration: none; color: black;">
              <div class="card_pro p-4 m-1 text-start" style="background-color: #f7e6d4;">
                <div class="text-end">
                  <div >
                    <p><%= a.start_time.strftime("%d/%m/%Y")%></p>
                    <p><%= a.start_time.strftime("%H:%M")%></p>
                  </div>
                </div>
                <p>Professionnel : <strong><%= a.professional.name %></strong></p>
                <p style="word-wrap: break-word; word-break: break-word;">Motif de la visite : <%= truncate(a.reason, length: 100, omission: '...') %></p>
              </div>
            </a>
          </div>
        <% end %>
      <% end%>
    </div>
  </div>
</div>
